<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/banner_portada"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTravel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/travel"
        android:textColor="#3D0498"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDreams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="@string/dreams"
        android:textColor="#E91E63"
        android:textColorLink="#E91E63"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnExplorar"
        app:layout_constraintEnd_toEndOf="@id/textViewTravel"
        app:layout_constraintHorizontal_bias="0.705"
        app:layout_constraintStart_toStartOf="@id/textViewTravel"
        app:layout_constraintTop_toBottomOf="@id/textViewTravel"
        app:layout_constraintVertical_bias="0"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btnExplorar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="264dp"
        android:backgroundTint="@color/logo1"
        android:padding="16dp"
        android:text="@string/explorar"
        android:textColor="#FFFFFF"
        app:cornerRadius="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewDreams"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>

